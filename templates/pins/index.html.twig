{% extends 'base.html.twig' %}

{% block title "find all the best pins on earth" %}

{% block body %}
    <h1>{{ pluralize(pins|length, 'Pin')}}</h1>
    {% for pin in pins %}
        <article>
            <h2><a href="{{path('show_pin', {id: pin.id})}}">{{pin.title}}</a></h2>
            <p>{{pin.description|u.truncate(100, '...', true)}}</p>
            <p>Cr√©e {{pin.createdAt|ago}}
        </article>
    {% endfor %}
{% endblock %}
