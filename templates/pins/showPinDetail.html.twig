{% extends 'layout/base.html.twig' %}

{% block title pin.title %}


{% block body %}
<div class="row">
    <div class="col-md-6 mx-auto">
        <article class="pin bg-white rounded shadow">
            <div class="mw-100 overflow-hidden">
                <img src="{{ (pin.picture ? vich_uploader_asset(pin): asset('build/images/300.png')) | imagine_filter('square_thumbnail_medium')}}" alt="{{ pin.title }}" class="w-100 rounded-top" />
            </div>
            <h2 class="pl-3 mt-3">{{pin.title}}</h2>
            <p class="pl-3 pb-3 text-muted"><small>Crée {{pin.createdAt|ago}} par USER</small></p>
        </article>
        <div class="text-center">
            <button type="button" class="btn btn-warning"><a href="{{path('pin_edit', {id: pin.id})}}" class="text-decoration-none">Editer votre pin</a></button>
            <button type="button" class="btn btn-danger"><a href="#" onclick="event.preventDefault(); confirm('Êtes vous sûr de vouloir supprimer votre pin ?') && document.getElementById('js-pin-delete-form').submit();" class="text-decoration-none">Supprimer votre pin</a></button>
        </div>
        <form id="js-pin-delete-form" action="{{path('pin_delete', {id: pin.id})}}" method="post" style="display:none">
            <input type="hidden" name="csrf_token" value="{{ csrf_token('pin_delete_' ~ pin.id) }}">
            <input type="hidden" name="_method" value="DELETE">
        </form>
    </div>
</div>

{% endblock %}